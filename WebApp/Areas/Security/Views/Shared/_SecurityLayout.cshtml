@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <environment include="Development">
        <link href="~/Areas/Security/css/Security.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/Areas/Security/css/Security.min.css" rel="stylesheet" />
    </environment>
}

@RenderBody()

@section Scripts {
    <environment include="Development">
        <script src="~/Areas/Security/Js/Roles/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/Areas/Security/Js/Security.min.js"></script>
    </environment>

    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("Scripts")
    }
}

